<mjml>
  <mj-body background-color="#F4F4F4">
      <mj-section  full-width='full-width' background-color="#d13138" padding ="60px">
        <mj-column>
          <mj-image width="250px" src="https://zupimages.net/up/18/34/aq3f.png" ></mj-image>
        </mj-column>
      </mj-section>
      <mj-section  padding="20px">

      </mj-section>

      {% for billet in bookingValue %}
        <mj-section background-color ="#000" padding ="0" border-radius ="13px 10px 10px 13px">
          <mj-group >
            <mj-column   vertical-align="middle" background-color="#fff"  width="75%" border-radius =" 10px 0 0 10px">
              <mj-text font-weight="600" > </mj-text>
              <mj-text font-weight="600" > Nom : {{billet.name}} {{billet.firstName}}</mj-text>
              <mj-text font-weight="600">Type du billet : {{billet.nameRate }}</mj-text>
              <mj-text font-weight="600">Durée de la visite : la " {{billet.nameType}} "</mj-text>
              <mj-text font-weight="600" > </mj-text>
            </mj-column>
            <mj-column background-color ="#000" width="25%" vertical-align="middle" >
              <mj-text  align="center" font-weight="600" color="#fff"  >{{billet.priceRate}} €</mj-text>
            </mj-column>
          </mj-group>
        </mj-section>
        <mj-section  padding="5px">
        </mj-section>
      {% endfor %}

      <mj-section background-color ="#000" padding ="5px" border-radius ="10px">
        <mj-column>
          <mj-text  align="center" font-weight="600" color="#fff"  > Total : {{totalPay}} €</mj-text>
        </mj-column>
      </mj-section>
      <mj-section  padding="15px">
      </mj-section>

      {% for billet in bookingValue %}
        <mj-section  padding="5px">
        </mj-section>
        <mj-section  full-width='full-width' background-color="#fff" padding ="10px 0px">
          <mj-column>
             <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Nom :</mj-text>
             <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px"> {{billet.name}} {{billet.firstName}} </mj-text>
             <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Pays : </mj-text>
             <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px"> {{billet.nameCountry}}  </mj-text>
             <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Date de naissance : </mj-text>
             <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px">{{billet.birthDate | date("d/m/Y")}}  </mj-text>
          </mj-column>
          <mj-column>
            <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Type du billet :</mj-text>
            <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px">{{billet.nameRate }} </mj-text>
             <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Durée de la visite :</mj-text>
             <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px">la " {{billet.nameType}} "</mj-text>
             <mj-text font-weight="600" line-height="18px" font-size="12px" padding ="0 0 0 20px">Date de la visite : </mj-text>
             <mj-text font-weight="500" line-height="18px" font-size="12px" padding ="0 0 0 20px">{{billet.visitDate | date("d/m/Y")}}  </mj-text>

          </mj-column>
        </mj-section>


        <mj-section  full-width='full-width' background-color="#fff" padding ="10px 0px">
          <mj-column>
             <mj-text align="center" font-weight="600" padding ="0" >{{billet.code}} </mj-text>
          </mj-column>
        </mj-section>
        {% if billet.nameRate == 'Réduit' %}
        <mj-section  full-width='full-width' background-color="#fff" padding ="10px 0px">
          <mj-column>
             <mj-text align="center" font-weight="600" padding ="0" color="#d13138" >Attention : présenter un justificatif en caisse </mj-text>
          </mj-column>
        </mj-section>
        {% endif %}
        <mj-section full-width='full-width' background-color ="#000" padding ="0" >
          <mj-column>
            <mj-image padding ="0" width="100px"  src="https://zupimages.net/up/18/34/wdwg.png" ></mj-image>
          </mj-column>
        </mj-section>
      {% endfor %}
  </mj-body>
</mjml>
